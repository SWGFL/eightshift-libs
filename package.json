{
  "name": "@infinum/eightshift-libs",
  "version": "2.0.5",
  "description": "WordPress libs developed by Eightshift team to use in modern WordPress.",
  "author": {
    "name": "Eightshift team",
    "email": "team@eightshift.com",
    "homepage": "https://eightshift.com/",
    "role": "Developer / IT Manager"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infinum/eightshift-libs.git"
  },
  "keywords": [
    "composer",
    "installer",
    "plugin",
    "blocks",
    "Gutenberg",
    "WordPress"
  ],
  "bugs": {
    "url": "https://github.com/infinum/eightshift-frontend-libs/issues"
  },
  "scripts": {
    "lint": "bash ./bin/lintPhp.sh",
    "docs": "docpress b && docpress s",
    "build-docs": "rm -rf docs && docpress b",
    "deploy-docs": "git subtree push --prefix docs origin gh-pages"
  },
  "homepage": "https://eightshift.com/",
  "license": "MIT",
  "dependencies": {
    "husky": "^4.0.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "devDependencies": {
    "docpress": "0.8.0"
  },
  "docpress": {
    "github": "infinum/eightshift-libs",
    "docs": "documentation",
    "dist": "docs"
  }
}
